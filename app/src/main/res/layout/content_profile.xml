<android.support.v4.widget.NestedScrollView
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:paddingBottom="10dp"
            android:id="@+id/layout_profile">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/toolbar_profile"
                android:title=""
                android:background="#00000000"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/profile_image"
                android:layout_marginTop="@dimen/elative_layout_margin_left_and_right"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/elative_layout_margin_left_and_right"
                android:layout_below="@+id/profile_image"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                />

        </RelativeLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/R1"
            android:layout_below="@+id/layout_profile"/>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/R1"
            android:id="@+id/R3">


        </FrameLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/R3"
            android:id="@+id/R4"
            android:paddingBottom="@dimen/elative_layout_margin_left_and_right"
            android:background="@drawable/layout_style"
            android:layout_marginTop="@dimen/elative_layout_margin_left_and_right"
            android:layout_marginRight="@dimen/elative_layout_margin_left_and_right"
            android:layout_marginLeft="@dimen/elative_layout_margin_left_and_right">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="@dimen/elative_layout_margin_left_and_right"
                android:textSize="@dimen/important_title_text_size"
                android:layout_marginTop="@dimen/title_margin_top"
                android:id="@+id/proRepTitle"
                android:text="@string/reputation"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/spinner_line_height"
                android:layout_below="@+id/proRepTitle"
                android:layout_marginLeft="@dimen/elative_layout_margin_left_and_right"
                android:layout_marginRight="@dimen/elative_layout_margin_left_and_right"
                android:layout_marginTop="10dp"
                android:id="@+id/proRepLine"
                android:background="@color/white"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/proR3T1"
                android:layout_below="@+id/proRepLine"
                android:textColor="@color/white"
                android:textSize="@dimen/title_text_size_2"
                android:text="@string/current_reputation"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/elative_layout_margin_left_and_right"
                android:layout_marginLeft="@dimen/elative_layout_margin_left_and_right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/elative_layout_margin_left_and_right"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/title_text_size_2"
                android:id="@+id/rep_level"
                android:layout_alignTop="@+id/proR3T1"
                android:text="@string/level_1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/proR3T2"
                android:textColor="@color/white"
                android:layout_below="@+id/proR3T1"
                android:textSize="@dimen/title_text_size_2"
                android:text="@string/votes_limit"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/elative_layout_margin_left_and_right"
                android:layout_marginLeft="@dimen/elative_layout_margin_left_and_right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/elative_layout_margin_left_and_right"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/title_text_size_2"
                android:id="@+id/rep_limit_votes"
                android:layout_alignTop="@+id/proR3T2"
                android:text="@string/votes1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/proR3T3"
                android:layout_below="@+id/proR3T2"
                android:textColor="@color/white"
                android:textSize="@dimen/title_text_size_2"
                android:text="@string/current_points"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/elative_layout_margin_left_and_right"
                android:layout_marginLeft="@dimen/elative_layout_margin_left_and_right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/elative_layout_margin_left_and_right"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/title_text_size_2"
                android:id="@+id/rep_points"
                android:layout_alignTop="@+id/proR3T3"
                android:text="10.00"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/proR3T4"
                android:layout_below="@+id/proR3T3"
                android:textColor="@color/white"
                android:textSize="@dimen/title_text_size_2"
                android:text="@string/next_level"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/elative_layout_margin_left_and_right"
                android:layout_marginLeft="@dimen/elative_layout_margin_left_and_right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/elative_layout_margin_left_and_right"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/title_text_size_2"
                android:id="@+id/rep_next_level"
                android:layout_alignTop="@+id/proR3T4"
                android:text="@string/level_2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/proR3T5"
                android:layout_below="@+id/proR3T4"
                android:textColor="@color/white"
                android:textSize="@dimen/title_text_size_2"
                android:text="@string/points_to_next_level"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/elative_layout_margin_left_and_right"
                android:layout_marginLeft="@dimen/elative_layout_margin_left_and_right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/elative_layout_margin_left_and_right"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/title_text_size_2"
                android:id="@+id/rep_points_next_level"
                android:layout_alignTop="@+id/proR3T5"
                android:text="30.00"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/R4"
            android:id="@+id/R5"
            android:background="@drawable/layout_style"
            android:layout_marginTop="@dimen/elative_layout_margin_left_and_right"
            android:layout_marginRight="@dimen/elative_layout_margin_left_and_right"
            android:layout_marginLeft="@dimen/elative_layout_margin_left_and_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="@dimen/elative_layout_margin_left_and_right"
                android:textSize="@dimen/important_title_text_size"
                android:layout_marginTop="@dimen/title_margin_top"
                android:id="@+id/proFollowingTitle"
                android:text="@string/following"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/spinner_line_height"
                android:layout_below="@+id/proFollowingTitle"
                android:layout_marginLeft="@dimen/elative_layout_margin_left_and_right"
                android:layout_marginRight="@dimen/elative_layout_margin_left_and_right"
                android:id="@+id/proFollowingLine"
                android:background="@color/white"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/proFollowingImageRecycler"
                android:layout_below="@+id/proFollowingTitle"
                android:layout_marginTop="@dimen/title_margin_top"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/R5"
            android:id="@+id/R6"
            android:background="@drawable/layout_style"
            android:layout_marginTop="@dimen/elative_layout_margin_left_and_right"
            android:layout_marginRight="@dimen/elative_layout_margin_left_and_right"
            android:layout_marginLeft="@dimen/elative_layout_margin_left_and_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="@dimen/elative_layout_margin_left_and_right"
                android:textSize="@dimen/important_title_text_size"
                android:layout_marginTop="@dimen/title_margin_top"
                android:id="@+id/proFollowersTitle"
                android:text="@string/followers"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/spinner_line_height"
                android:layout_below="@+id/proFollowersTitle"
                android:layout_marginLeft="@dimen/elative_layout_margin_left_and_right"
                android:layout_marginRight="@dimen/elative_layout_margin_left_and_right"
                android:id="@+id/proFollowersLine"
                android:background="@color/white"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/proFollowersImageRecycler"
                android:layout_below="@+id/proFollowersLine"
                android:layout_marginTop="@dimen/title_margin_top"/>



        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/R6"
            android:id="@+id/dsa"
            android:layout_marginTop="@dimen/elative_layout_margin_left_and_right"
            android:layout_marginLeft="@dimen/elative_layout_margin_left_and_right"
            android:layout_marginRight="@dimen/elative_layout_margin_left_and_right"
            >

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/proBtnInfo"
                android:textColor="@color/colorPrimary"
                android:text="Info"
                android:background="@color/colorPrimaryDark"
                android:textSize="@dimen/button_text_size"
                />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/proBtnPublications"
                android:text="@string/publications"
                android:background="@color/icon"
                android:textSize="@dimen/button_text_size"
                android:textColor="@color/colorPrimary"
                />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/proFragment"
            android:layout_below="@+id/dsa"
            android:layout_marginTop="@dimen/elative_layout_margin_left_and_right" />

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
