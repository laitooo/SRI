<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_about"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_about"
        android:fillViewport="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/about1"
                android:text="@string/rational_title"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/about_margin"
                android:layout_marginLeft="@dimen/about_margin"
                android:textSize="@dimen/about_title_text_size"/>


            <TextView

                android:layout_below="@+id/about1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/about1C"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/about_margin"
                android:layout_marginLeft="@dimen/about_text_margin_left"
                android:layout_marginRight="@dimen/about_margin"
                android:textSize="@dimen/about_normal_text_size"/>

            <TextView

                android:layout_below="@+id/about1C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/our_vision_title"
                android:id="@+id/about2"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/about_margin"
                android:layout_marginLeft="@dimen/about_margin"
                android:textSize="@dimen/about_title_text_size"/>

            <TextView

                android:layout_below="@+id/about2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/about2C"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/about_margin"
                android:layout_marginLeft="@dimen/about_text_margin_left"
                android:layout_marginRight="@dimen/about_margin"
                android:textSize="@dimen/about_normal_text_size"/>


            <TextView

                android:layout_below="@+id/about2C"
                android:layout_width="wrap_content"
                android:id="@+id/about3"
                android:layout_height="wrap_content"
                android:text="@string/our_mission_title"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/about_title_text_size"/>

            <TextView

                android:layout_below="@+id/about3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/about3C"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/about_margin"
                android:layout_marginLeft="@dimen/about_text_margin_left"
                android:layout_marginRight="@dimen/about_margin"
                android:textSize="@dimen/about_normal_text_size"/>


            <TextView

                android:layout_below="@+id/about3C"
                android:id="@+id/about4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/our_goals_title"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/about_margin"
                android:layout_marginLeft="@dimen/about_margin"
                android:textSize="@dimen/about_title_text_size"/>


            <TextView

                android:layout_below="@+id/about4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/about4C"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/about_margin"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="@dimen/about_margin"
                android:textSize="@dimen/about_normal_text_size"/>


            <TextView

                android:layout_below="@+id/about4C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/our_strategy_title"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/about_margin"
                android:layout_marginLeft="@dimen/about_margin"
                android:textSize="@dimen/about_title_text_size"
                android:id="@+id/about5" />

            <TextView

                android:layout_below="@+id/about5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/about5C"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/about_margin"
                android:layout_marginRight="@dimen/about_margin"
                android:layout_marginLeft="@dimen/about_text_margin_left"
                android:textSize="@dimen/about_normal_text_size"/>

            <ImageButton
                android:layout_width="@dimen/about_button_width_and_height"
                android:layout_height="@dimen/about_button_width_and_height"
                android:id="@+id/buttonViewMore1"
                android:src="@android:drawable/arrow_down_float"
                android:layout_alignTop="@+id/about1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/about_button_margin"
                android:layout_alignParentEnd="true"
                android:background="@color/colorPrimaryDark" />

            <ImageButton
                android:layout_width="@dimen/about_button_width_and_height"
                android:layout_height="@dimen/about_button_width_and_height"
                android:id="@+id/buttonViewMore2"
                android:src="@android:drawable/arrow_down_float"
                android:layout_alignTop="@+id/about2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/about_button_margin"
                android:layout_alignParentEnd="true"
                android:background="@color/colorPrimaryDark" />

            <ImageButton
                android:layout_width="@dimen/about_button_width_and_height"
                android:layout_height="@dimen/about_button_width_and_height"
                android:id="@+id/buttonViewMore3"
                android:src="@android:drawable/arrow_down_float"
                android:layout_alignTop="@+id/about3"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/about_button_margin"
                android:layout_alignParentEnd="true"
                android:background="@color/colorPrimaryDark" />

            <ImageButton
                android:layout_width="@dimen/about_button_width_and_height"
                android:layout_height="@dimen/about_button_width_and_height"
                android:id="@+id/buttonViewMore4"
                android:src="@android:drawable/arrow_down_float"
                android:layout_alignTop="@+id/about4"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/about_button_margin"
                android:layout_alignParentEnd="true"
                android:background="@color/colorPrimaryDark" />

            <ImageButton
                android:layout_width="@dimen/about_button_width_and_height"
                android:layout_height="@dimen/about_button_width_and_height"
                android:id="@+id/buttonViewMore5"
                android:src="@android:drawable/arrow_down_float"
                android:layout_alignTop="@+id/about5"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/about_button_margin"
                android:layout_alignParentEnd="true"
                android:background="@color/colorPrimaryDark" />



        </RelativeLayout>
    </ScrollView>
</RelativeLayout>